<div class="container">
    <div class="row  justify-content-center">
        <img src="/assets/img/burger.png" alt="burger phot">
    </div>
    <div class="row  justify-content-center">
        <H1>Eat-Da-Burger</H1>
    </div>  

    <div class="row">
        <div class="col-md-7 col-sm-12">
            <h2>Burgers Available !</h2>
            <ol class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block }}
                    {{/unless}}
                {{/each}}             
               
            </ol>
        </div>
    
        <div class="col-md-4 col-sm-12" >
            <h2>Burgers devoured!</h2>
            <ol >
                 {{#each burgers}}
                    {{#if devoured}}
                    <li>{{this.burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="row  justify-content-center">
        <form class="create-form">
            <div class="form-group">
                <label for="inputBurger"></label>
                <textarea class="form-control" id="inputBurger" rows="3" placeholder="Burger Name"></textarea>
            </div>  
            <button type="submit" class="btn btn-primary" id="btnBurger">Submit</button>          
        </form>
        
    </div>
</div>    

<div class="container">
    <div class="modal" id="modal-info" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-body-info">
                
            </div>
            <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
            </div>
        </div>
    </div>
</div>        